# Blockchain Configuration
# Copy this file to .env and fill in your actual values

# Polygon Mumbai Testnet (Recommended)
RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
# Alternative RPC URLs:
# RPC_URL=https://rpc-mumbai.matic.today
# RPC_URL=https://matic-mumbai.chainstacklabs.com

# Contract deployed on Mumbai testnet
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# Your wallet private key (NEVER commit this to git)
PRIVATE_KEY=your_private_key_here

# Chain ID for Mumbai testnet
CHAIN_ID=80001

# IPFS Configuration
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# Firebase Configuration (if needed)
FIREBASE_PROJECT_ID=your_firebase_project_id
